@model List<Noter.Models.TodoItem>

<div class="container mt-4">
    <h1 class="display-4">Todo List</h1>

    <!-- Form to add a new todo -->
    <form asp-action="Add" method="post" class="mt-3">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter a todo title" required />
        </div>
        <div class="form-group mt-2">
            <label for="description">Description (optional)</label>
            <textarea id="description" name="description" class="form-control" placeholder="Enter a description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Add Todo</button>
    </form>

    <!-- Display list of todos -->
    <div class="mt-5">
        <h2>Your Todos</h2>
        <ul class="list-group">
            @foreach (var todo in Model)
            {
                <li class="list-group-item">
                    <strong>@todo.Title</strong>
                    <p>@todo.Description</p>
                    <p>Created by: @todo.UserName</p>
                    <small>Created at: @todo.CreatedAt.ToString("g")</small>
                    @if (todo.IsCompleted)
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                </li>
            }
        </ul>
    </div>
</div>